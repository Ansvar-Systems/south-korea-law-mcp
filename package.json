{
  "name": "@ansvar/south-korea-law-mcp",
  "version": "1.1.0",
  "mcpName": "eu.ansvar/south-korea-law-mcp",
  "description": "South Korean law database covering personal information protection (PIPA), ICT network security, credit information, electronic government, and intelligent informatization legislation with full-text search",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "south-korea-law-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "data/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:contract": "vitest run __tests__/contract/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "dev": "tsx src/index.ts",
    "health": "curl -s http://localhost:3000/health | jq .",
    "build:db": "tsx scripts/build-db.ts",
    "build:db:free": "tsx scripts/build-db.ts --free",
    "ingest": "tsx scripts/ingest.ts",
    "check:updates": "tsx scripts/check-updates.ts",
    "drift:detect": "tsx scripts/drift-detect.ts",
    "validate": "npm test && npm run test:contract"
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.3",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@vercel/node": "^5.0.0",
    "better-sqlite3": "^11.0.0",
    "fast-xml-parser": "^4.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ansvar-Systems/south-korea-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/south-korea-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/south-korea-law-mcp#readme",
  "keywords": [
    "mcp",
    "south-korea-law",
    "pipa",
    "personal-information",
    "network-act",
    "credit-information",
    "electronic-government",
    "intelligent-informatization",
    "cybersecurity",
    "korea",
    "legal",
    "compliance",
    "ansvar"
  ],
  "author": "Ansvar Systems <hello@ansvar.eu>",
  "publishConfig": {
    "access": "public"
  }
}
